<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/action_bar_normal"
    style="@style/MyWidget.ActionBarPanel" >

    <LinearLayout
        android:id="@+id/navi_button"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@drawable/np_common_pressed_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/action_navi_tip"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_previous_item" />

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:scaleType="center"
            android:src="@drawable/np_logo_navi" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/action_buttons"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:minWidth="48dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/action_share"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="@drawable/np_common_pressed_bg"
            android:scaleType="center"
            android:src="@drawable/ic_action_share"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/action_delete"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:background="@drawable/np_common_pressed_bg"
            android:scaleType="center"
            android:src="@drawable/ic_action_delete"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/action_style"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:background="@drawable/np_common_pressed_bg"
            android:scaleType="center"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/main_title_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/navi_button"
        android:layout_toLeftOf="@+id/action_buttons"
        android:background="@drawable/np_common_pressed_bg"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/cp_navi_text_color"
        android:textSize="@dimen/common_title_text_size" />
</RelativeLayout>